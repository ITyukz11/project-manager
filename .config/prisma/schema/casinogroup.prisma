model CasinoGroup {
  id            String        @id @default(uuid())
  name          String        @unique
  description   String?
  is3rdParty    Boolean       @default(false)
  superAdminId  String        // NEW: link to SuperAdmin
  superAdmin    SuperAdmin    @relation(fields: [superAdminId], references: [id])
  users         User[]        // NEW: users in this casino group
  transactionRequests TransactionRequest[] // NEW: transaction requests for this casino group
  cashins       Cashin[]      // NEW: cashins for this casino group
  cashouts      Cashout[]     // NEW: cashouts for this casino group
  remittances   Remittance[]  // NEW: remittances for this casino group
  concerns      Concern[]     // NEW: concerns for this casino group
  tasks         Task[]        // NEW: tasks for this casino group
  commission    Commission[]     //
  groupChats    GroupChat[]   // NEW: group chats associated with this casino group
  customerSupports CustomerSupport[] // NEW: customer support tickets for this casino group
  gateway       Gateway[]
  dpayTransactions   DpayTransaction[]
  gatewayBlackListPlayers   GatewayBlackListPlayers[]
  dpayConfigs   DpayConfig[]
  active        Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}