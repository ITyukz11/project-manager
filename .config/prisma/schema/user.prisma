// Unified User: single model for all roles
model User {
  id               String          @id @default(uuid())
  email            String          @unique
  password         String
  name             String
  username         String         @unique
  role             Role
  messengerLink    String?
  active           Boolean         @default(true)
  groupChats      GroupChat[]
  cashoutThreads   CashoutThread[]             // comments made by this user
  mentionedInThreads CashoutThread[] @relation("CashoutThreadMentions")
  cashouts         Cashout[]                  // cashouts created by/for this user
  ownedSuperAdmins SuperAdmin[] @relation("UserOwnedSuperAdmins")
  ownedSuperAdminsId       String?  
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}
