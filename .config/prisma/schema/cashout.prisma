// Cashout: attributed to a User (admin, superadmin, regular user)
model Cashout {
  id              String       @id @default(uuid())
  amount          Float
  userName        String  //Player Username
  status          CashoutStatus   @default(PENDING)

 
  attachments     Attachment[]

  details         String

  userId          String?
  user            User?           @relation(fields: [userId], references: [id])
  casinoGroupId   String
  casinoGroup     CasinoGroup @relation(fields: [casinoGroupId], references: [id])
  cashoutThreads  CashoutThread[]
  cashoutLogs     CashoutLogs[]

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model CashoutLogs{
  id           String     @id @default(uuid())
  action       String
  cashoutId    String
  cashout      Cashout    @relation(fields: [cashoutId], references: [id])
  performedById String
  performedBy  User       @relation(fields: [performedById], references: [id])
  createdAt    DateTime   @default(now())
}

model CashoutThread {
  id           String     @id @default(uuid())
  message      String
  cashoutId    String
  cashout      Cashout    @relation(fields: [cashoutId], references: [id])
  authorId     String
  author       User       @relation(fields: [authorId], references: [id])
  mentions     User[]     @relation("CashoutThreadMentions")
  attachments  Attachment[] // <-- NEW!
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Attachment {
  id                String   @id @default(uuid())
  url               String
  filename          String
  mimetype          String
  cashoutId         String?      // <-- Make optional
  cashout           Cashout?     @relation(fields: [cashoutId], references: [id])
  cashoutThreadId   String?      // <-- NEW
  cashoutThread     CashoutThread? @relation(fields: [cashoutThreadId], references: [id])
  createdAt         DateTime @default(now())
}

enum CashoutStatus {
  PENDING
  PARTIAL
  COMPLETED
  REJECTED
}